<div class="col-md-3"></div>
<div class="col-md-5 new-post">
	<%= form_tag("/posts/create", method: "post") do %>
	<p>Create a text post</p>
	  <%= hidden_field_tag(:post_type, "text") %>
	  <%= text_field_tag(:title, nil, placeholder: "Title") %><br/>
	  <%= text_area_tag(:content) %><br>
	  <%= text_field_tag(:tags, nil, placeholder: "tags, separated by commas") %></br>
	  <%= submit_tag("Submit") %>
	<% end %>
</div>